<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign up</h5>
          <%= form_for(resource, as: resource_name, url: "/users", method: :post) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-label-group">
              <%= f.text_field :first_name, id: "inputFirstName", class: "form-control", placeholder: "First Name", required: true %>
              <label for="inputFirstName">First Name</label>
            </div>

            <div class="form-label-group">
              <%= f.text_field :last_name, id: "inputLastName", class: "form-control", placeholder: "Last Name", required: true %>
              <label for="inputLastName">Last Name</label>
            </div>
            <div class="form-label-group">
              <%= f.select(:role, User.roles.keys.to_a, {}, { class: 'form-control' }) %>
            </div>
            <div class="form-label-group">
              <%= f.email_field :email, id: "emailSignUp", class: "form-control", placeholder: "Email", required: true %>
              <label for="emailSignUp">Email</label>
            </div>

            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "new-password", id: "newPassword", class: "form-control", minlength: "6",  placeholder: "Last Name", required: true %>
              <label for="newPassword">Password</label>
            </div>

            <div class="form-label-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "confirmPassword", minlength: "6",  placeholder: "Last Name", required: true %>
              <label for="confirmPassword">Password</label>
            </div>

            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
