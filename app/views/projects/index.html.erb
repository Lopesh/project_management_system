<div class="container mt-5">
  <div class="row project-dashboard">
    <% @projects.each do |project| %>
      <div class="card col-md-5  mt-1 card-override">
        <div class="card-body card-body-override text-center">
          <h5 class="card-title"><%= project.name %></h5>
        </div>
        <div class="mt-md-2 mb-md-2">
          <div class="row">
            <div class="col-md-3 text-center">
              <button class="btn btn-success new-task-addition" title="Add New Task" data-toggle="modal" data-target="#exampleModal">
                <i class="fa fa-plus"></i>
              </button>
            </div>
            <div class="col-md-3 text-center">
              <button class="btn btn-warning view-project-description" title="View Project" data-toggle="modal" data-target="#exampleModal">
                <i class="fa fa-eye"></i>
              </button>
            </div>
            <% if can? :destroy, project %>
              <div class="col-md-3 text-center">
                <button class="btn btn-danger destroy-task" data-toggle="modal" title="Delete Project" data-target="#exampleModal">
                  <i class="fa fa-trash"></i>
                </button>
              </div>
             <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if can? :create, Project %>
  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Add New Project</button>
  <% end %>
  <%= render "layouts/modal" %>
</div>